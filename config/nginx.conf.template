worker_processes 1;

events {
  worker_connections 1024;
}

http {
  include       mime.types;
  default_type  application/octet-stream;
  sendfile        on;

  server {
    listen       __PORT__;
    server_name  localhost;

    location / {
      root   public;
      index  index.html;
      try_files $uri $uri/ =404;
    }
  }
}
